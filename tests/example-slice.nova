const g_array: [3u]ssize = (:[3u]ssize)[1s, 3s, 5s];
const g_slice: []ssize = (:[]ssize){&g_array[1u], 2u};

const array_of_zero_sized_objects: [2u][0u]void =
    (:[2u][0u]void)[
        (:[0u]void)[],
        (:[0u]void)[]
    ];
const slice_of_zero_sized_objects: [][0u]void =
    (:[][0u]void){&array_of_zero_sized_objects[0u], 2u};

func main() void {
    dump (:[]ssize){&g_array[0u], 3u}[0u];
    dump (:[]ssize){&g_array[0u], 3u}[1u];
    dump (:[]ssize){&g_array[0u], 3u}[2u];

    var slice: []ssize = (:[]ssize){&g_array[0u], 3u};
    dump slice[0u];
    dump slice[1u];
    dump slice[2u];

    var ptr: *ssize = &slice[2u];
    dump *ptr;

    dump g_slice[0u];
    dump g_slice[1u];

    dump slice_of_zero_sized_objects[0u];
    dump &slice_of_zero_sized_objects[0u];
}

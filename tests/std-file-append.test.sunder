import "std/core.sunder";
import "std/fs.sunder";

const path: []byte = "data.tmp";

func main() void {
    var result: std::result[[std::file, []byte]] = std::file::open(path, std::file::OPEN_WRITE);
    var file: std::file = result.value();
    defer { file.fini(); }
    var writer: std::writer = std::writer::init[[std::file]](&file);
    std::print_line(writer, "OPENED WITH WRITE");

    var result = std::file::open(path, std::file::OPEN_APPEND);
    var file = result.value();
    defer { file.fini(); }
    var writer = std::writer::init[[std::file]](&file);
    std::print_line(writer, "OPENED WITH APPEND");

    var result = std::file::open(path, std::file::OPEN_READ);
    var file = result.value();
    defer { file.fini(); }
    var reader: std::reader = std::reader::init[[std::file]](&file);
    var buf: [512]byte = (:[512]byte)[0...];
    var read_result: std::result[[usize, []byte]] =
        reader.read(buf[0:countof(buf)]);
    std::print_line(std::out(), buf[0:read_result.value()]);
}

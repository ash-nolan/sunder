import "std/core.sunder";
import "std/bigint.sunder";
import "std/general_allocator.sunder";
import "std/hash_map.sunder";

func main() void {
    var allocator = std::general_allocator::init();
    defer {
        allocator.fini();
    }
    var allocator = std::allocator::init[[typeof(allocator)]](&allocator);

    var map = std::hash_map[[std::bigint, []byte]]::init(allocator);
    defer {
        map.fini();
    }

    var result = std::bigint::init_from_str(allocator, "0", 0);
    var _ = map.insert(result.value(), "value 1");
    var result = std::bigint::init_from_str(allocator, "+0xBEEFBEEFBEEFBEEF", 0);
    var _ = map.insert(result.value(), "value 2");
    var result = std::bigint::init_from_str(allocator, "-0xBEEFBEEFBEEFBEEF", 0);
    var _ = map.insert(result.value(), "value 3");
    var result = std::bigint::init_from_str(allocator, "-0xBEEFBEEFBEEFBEEF", 0);
    var _ = map.insert(result.value(), "value 4");
    var result = std::bigint::init_from_str(allocator, "0xFFFFFFFFFFFFFFFF", 0);
    var _ = map.insert(result.value(), "value 5");

    var iterator = std::hash_map_iterator[[std::bigint, []byte]]::init(&map);
    for iterator.advance() {
        std::print_format_line(
            std::out(),
            "{} : \"{e}\"",
            (:[]std::formatter)[
                std::formatter::init[[std::bigint]](&iterator.current().*.key),
                std::formatter::init[[[]byte]](&iterator.current().*.value)]);
    }
}

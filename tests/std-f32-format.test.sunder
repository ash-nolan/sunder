import "std";

func test(f: f32) void {
    std::print_format_line(
        std::out(),
        "{}",
        (:[]std::formatter)[std::formatter::init[[typeof(f)]](&f)]);
}

func main() void {
    test(123.0);
    test(+123.5);
    test(-123.5);
    test(f32::INFINITY);
    test(+f32::INFINITY);
    test(-f32::INFINITY);
    test(f32::NAN);
}

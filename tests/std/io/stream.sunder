import "std/io.sunder";

func main() void {
    std::out.write("Hello, stdout!\n");
    std::err.write("Hello, stderr!\n");

    var stdout_writer: std::writer = std::writer::init[[:std::stream]](&std::out);
    stdout_writer.write("Hello, stdout_writer!\n");

    var stderr_writer: std::writer = std::writer::init[[:std::stream]](&std::err);
    stderr_writer.write("Hello, stderr_writer!\n");

    std::out.print("foo");
    std::out.println("bar");
}
################################################################################
# Hello, stdout!
# Hello, stderr!
# Hello, stdout_writer!
# Hello, stderr_writer!
# foobar

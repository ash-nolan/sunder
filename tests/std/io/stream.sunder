import "std/io.sunder";
import "std/writer.sunder";

func main() void {
    std::stdout.write("Hello, stdout!\n");
    std::stderr.write("Hello, stderr!\n");

    var stdout_writer: std::writer = std::writer::init[[:std::stream]](&std::stdout);
    stdout_writer.write("Hello, stdout_writer!\n");

    var stderr_writer: std::writer = std::writer::init[[:std::stream]](&std::stderr);
    stderr_writer.write("Hello, stderr_writer!\n");

    stdout_writer.write_all("Call to write_all!\n");
}

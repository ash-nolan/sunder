import "std/io.sunder";
import "std/writer.sunder";

func main() void {
    std::fd_stdout.write("Hello, fd_stdout!\n");
    std::fd_stderr.write("Hello, fd_stderr!\n");

    var fd_stdout_writer: std::writer =
        std::writer::init[[:std::stream]](&std::fd_stdout);
    (*fd_stdout_writer.interface).write(
        fd_stdout_writer.instance, "Hello, fd_stdout_writer!\n");

    var fd_stderr_writer: std::writer =
        std::writer::init[[:std::stream]](&std::fd_stderr);
    (*fd_stderr_writer.interface).write(
        fd_stderr_writer.instance, "Hello, fd_stderr_writer!\n");
}

#!/bin/sh
set -e

usage() {
    cat <<EOF
Usage: $(basename $0) FILE

Options:
  -h --help     Print this help message and exit.
EOF
}

if [ "${#}" != '1' ]; then
    echo 'error: invalid number of arguments'
    usage
    exit 1
fi
FILE="${1}"

if [ -z "${NOVA_HOME}" ]; then
    NOVA_HOME=$(pwd)
fi

"${NOVA_HOME}/bin/nova-compile" "${FILE}"
./a.out

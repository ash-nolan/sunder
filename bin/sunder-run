#!/bin/sh
set -u

usage() {
    cat <<EOF
Usage: $(basename $0) FILE [ARGS...]

Options:
  -h        Display usage information and exit.
EOF
}

if [ "$#" -eq 0 ]; then
    usage
    exit 0
fi

for arg in "$@"; do
case "$1" in
    -h)
        usage
        exit 0
        ;;
    *)
        ;;
esac
done

FILE="${1}"

if [ -z "${SUNDER_HOME}" ]; then
    SUNDER_HOME=$(pwd)
fi

if ! "${SUNDER_HOME}/bin/sunder-compile" "${FILE}"; then
    exit 1
fi

shift
./a.out $@
STATUS=$?
rm a.out
exit $STATUS
